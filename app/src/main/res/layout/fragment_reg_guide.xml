<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegGuideFragment"
    android:layout_margin="@dimen/text_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/howtoreg"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/txt_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noidung_dangkyxettuyen"
            android:id="@+id/noidung_dangkyxettuyen"
            android:layout_below="@+id/txt_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem các phương thức xét tuyển"
            android:id="@+id/xemphuongthucxettuyen"
            android:layout_below="@+id/noidung_dangkyxettuyen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tại đây"
            android:id="@+id/txt_taiday"
            android:layout_toEndOf="@+id/xemphuongthucxettuyen"
            android:layout_alignBottom="@+id/xemphuongthucxettuyen"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/holo_orange_dark"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>